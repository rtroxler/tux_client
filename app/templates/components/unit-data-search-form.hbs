{{#if loading}}
  <div class='alert alert-info'>Loading...</div>
{{/if}}

<form class='form-inline' {{action 'search' on='submit'}}>
  <div class='form-group'>
    {{input
      value=unitDimensions
      placeholder='Unit Dimensions'
      class='form-control'
      autocomplete='off'
      required=true
      autofocus=true
    }}
  </div>

  <div class='form-group'>
    {{input
      value=unitLocation
      placeholder='City'
      class='form-control'
      autocomplete='off'
      required=true
    }}
  </div>

  {{input
    type='submit'
    value='Search'
    disabled=loading
    class='btn btn-primary'
  }}
</form>
