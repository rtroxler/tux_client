{{#if errorLoadingData}}
  <div class='alert alert-danger'>{{errorMessage}}</div>
{{/if}}

{{#if loadingRateData}}
  <div class='alert alert-info'>Loading...</div>
{{/if}}

<div class='container-padded'>
  <div class='container-search left'>
    {{unit-data-search-form
      loading=loadingRateData
      currentRateData=currentUnitData.firstObject
      updateDataAction='updateCurrentRateData'
    }}
  </div>

  {{#if currentRateData.firstObject.numRentalsProcessed}}
    <div class='right rentals-processed text-right'>
      <strong>Process Time: </strong> {{currentRateData.firstObject.processingTime}}s <strong>Rentals Processed:</strong> {{currentRateData.firstObject.numRentalsProcessed}}
    </div>
  {{/if}}

  <div class='clear'></div>
</div>

<div class='container-padded'>
  {{unit-graph
    monthlyData=currentRateData.firstObject.dataArray
    nationalData=nationalRateData.firstObject.dataArray
    searchedLocation=searchedLocation
    searchedUnitSize=searchedUnitSize
  }}
</div>
